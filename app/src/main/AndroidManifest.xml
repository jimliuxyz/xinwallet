<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xinwang.xinwallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:name=".XinWalletApp"
        android:allowBackup="true"
        android:icon="@drawable/uwallet48"
        android:label="@string/app_name"
        android:roundIcon="@drawable/uwallet48"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".presenter.activities.IntroActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".presenter.activities.login.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".presenter.activities.login.SmsVerifyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presenter.activities.login.SetPinCode1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presenter.activities.login.SetPinCode2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presenter.activities.util.UnlockAppActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presenter.activities.HomeActivity"
            android:label="@string/Home.title"
            android:screenOrientation="portrait">
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".presenter.activities.login.SetUsernameActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible"></activity>
        <activity
            android:name=".presenter.activities.AgreementActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presenter.activities.PrivacyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".jsonrpc.JSONRPCActivity"
            android:screenOrientation="portrait">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->
            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
